<div class="contents row">
  <p><%= @nickname %>さんの投稿一覧</p>
  <% @spots.each do |spot| %>
    <%= link_to spot_path(spot.id) do %>
      <%= image_tag spot.image, class: "spot-img"%>
      <p><%= spot.description %></p>
      <span class="title"><%= spot.title %></span>
    <% end %>
  <% end %>
</div>